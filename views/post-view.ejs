<%- include('./layouts/header') %>
<body>
<div>
    <%- include('./layouts/nav') %>
    <div class="container">
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
                <div class="card">
                    <h1 class="card-header display-5 fw-bold"><%= post.title%></h1>

                    <p class="card-body col-md-8 fs-4"><%=post.description%></p>
                </div>
                <br>
                <p>Comment</p>
                <% for (var i = 0 ; i < post.comment.length; i++) { %>
                    <ol class="list-group list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold"><%= post.user_id.name%></div>
                                <%= post.comment[i].text%>
                            </div>
<!--                            <span class="badge bg-primary rounded-pill">14</span>-->
                        </li>
                    </ol>
                <% } %>

                <form class="mt-5" action="/comment-create/<%= post._id%>" method="post">
                    <textarea class="form-control" name="comment" rows="3"></textarea>
                    <button class="btn btn-primary btn-lg mt-3" type="submit">Comment</button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
<%- include('./layouts/footer') %>